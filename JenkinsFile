pipeline {
    agent any // Specifies where the pipeline will run, 'any' means on any available agent
    stages {
        stage('Checkout') { // Stage 1: Pull code from a repository
            steps {
                // In a real scenario, this step would use 'git' to clone a repository
                echo 'Checking out source code...'
            }
        }
        stage('Build') { // Stage 2: Compile the project
            steps {
                // Example for a Maven project: sh 'mvn clean install'
                echo 'Building the application...'
            }
        }
        stage('Test') { // Stage 3: Run tests
            steps {
                // Example for running tests: sh 'mvn test'
                echo 'Running unit tests...'
            }
        }
        stage('Deploy') { // Stage 4: Deploy the application
            steps {
                // Example for deploying: sh 'ansible-playbook -i inventory/prod site.yml'
                echo 'Deploying the application to a server...'
            }
        }
    }
}
